{
    "name": "groepsbezoeken-app",
    "version": "1.1.0",
    "description": "BiebBattle - Bibliotheek Speurtocht App met Cloudflare D1 backend",
    "type": "module",
    "scripts": {
        "dev": "npx serve . -l 3000",
        "dev:worker": "npx wrangler dev",
        "dev:all": "npm run dev & npm run dev:worker",
        "deploy": "npx wrangler deploy",
        "db:migrate:local": "npx wrangler d1 execute groepsbezoeken-db --local --file=./migrations/0001_init.sql",
        "db:migrate:remote": "npx wrangler d1 execute groepsbezoeken-db --remote --file=./migrations/0001_init.sql",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "lint": "eslint js/**/*.js worker/**/*.js tests/**/*.js",
        "lint:fix": "eslint js/**/*.js worker/**/*.js tests/**/*.js --fix",
        "validate": "npm run lint && npm run test && npm run test:e2e",
        "ci": "npm run lint && npm run test -- --reporter=verbose && npm run test:e2e -- --reporter=github"
    },
    "devDependencies": {
        "@playwright/test": "^1.41.0",
        "@vitest/coverage-v8": "^1.2.0",
        "@vitest/ui": "^1.2.0",
        "ajv": "^8.12.0",
        "ajv-formats": "^2.1.1",
        "eslint": "^8.56.0",
        "happy-dom": "^13.3.0",
        "vitest": "^1.2.0"
    },
    "keywords": [
        "bibliotheek",
        "speurtocht",
        "educatie"
    ],
    "author": "Bibliotheek Noordwest Veluwe",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    }
}